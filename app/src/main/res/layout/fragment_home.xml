<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#ecfff2"
    android:weightSum="7">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:weightSum="5">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/button_back"
            android:layout_weight="2" android:background="@drawable/back" android:layout_margin="10dp"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/wino_titulo" android:layout_margin="10dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/button_home"
            android:layout_weight="2" android:background="@drawable/options" android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2">
    </LinearLayout>

    <!--End of top bar-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:weightSum="3">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00."
                android:id="@+id/kilometers" android:layout_gravity="bottom" android:textSize="180dp"
                android:textColor="#080808" android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:id="@+id/meters" android:layout_gravity="bottom" android:textSize="60dp"
                android:textColor="#080808" android:layout_marginTop="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Km"
                android:id="@+id/none"
                android:layout_gravity="top" android:textSize="60dp"
                android:layout_marginLeft="140dp"
                android:textColor="#080808"/>
        </LinearLayout>
    </LinearLayout>

    <!--End of big number-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:weightSum="2">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/beneficts"
                android:layout_weight="1" android:background="@drawable/beneficts"
                android:layout_marginLeft="60dp" android:layout_marginRight="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/trees"
                android:layout_weight="1" android:background="@drawable/tree" android:layout_marginLeft="30dp"
                android:layout_marginRight="60dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>